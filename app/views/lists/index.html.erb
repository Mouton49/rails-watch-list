<div class="navbar">
  <%= link_to '+ New list', new_list_path, class: "btn btn-primary ml-3 mr-3" %>
</div>
<div class="banner">
  <h1 class="text-center">Movie Lists</h1>
</div>

<ul class="allcard p-0">
  <% @lists.each do |list| %>
    <li class="card">
      <div class="pics">
      </div>
      <div>
        <%= link_to list.name, list_path(list), class: "text-decoration-none"%>
      </div>
    </li>
  <% end %>
</ul>
