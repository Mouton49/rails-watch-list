<div class="navbar">
  <%= link_to '+ New list', new_list_path, class: "btn btn-primary ml-3 mr-3" %>
</div>
<div class="banner">
  <h1 class="text-center">Movie Lists</h1>
</div>

<ul class="allcard p-0 mt-3">
  <% @lists.each do |list| %>
    <li class="card " style="width: 18rem;">
      <div>
        <%= cl_image_tag list.photo.key, width: 300, height: 230, crop: :fill, class: "card-img-top" %>
        <div class="d-flex justify-content-center border mt-2">
          <%= link_to list.name, list_path(list), class: "card-title text-decoration-none text-dark align-middle mb-0"%>
        </div>
      </div>
    </li>
  <% end %>
</ul>
