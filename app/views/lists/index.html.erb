<h1 class="text-center pb-5 mt-5">Movie Lists</h1>
<ul class="p-0">
  <% @lists.each do |list| %>
  <li class="list-group-item text-center p-3 ml-3 mr-3"><%= link_to list.name, list_path(list), class: "text-decoration-none"%></li>
  <% end %>
</ul>

<div>
  <%= link_to '+ New list', new_list_path, class: "btn btn-primary ml-3 mr-3" %>
</div>
