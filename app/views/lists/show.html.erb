<h2 class="text-center mt-4 mb-4"><%= @list.name %></h2>

<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item text-center ml-3 mr-3"><strong><%= bookmark.movie.title %></strong> -- "<%= bookmark.comment %>" <%= link_to "Delete movie", bookmark_path(bookmark),
                                                                                                                                                            method: :delete,
                                                                                                                                                            data: { confirm: "Are you sure?" }  %></li>
   <% end %>
</ul>

<br>
<br>
<br>
<div class="d-flex justify-content-between ml-3 mr-3">
  <%= link_to 'Home', lists_path, class: "btn btn-primary text-decoration-none" %>
  <%= link_to '+ Add a movie', new_list_bookmark_path(@list), class: "btn btn-primary text-decoration-none" %>
</div>
