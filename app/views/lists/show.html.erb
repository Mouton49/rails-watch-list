<h2 class="text-center mt-4 mb-4"><%= @list.name %></h2>

<ul class="allcard p-0 mt-5">
  <% @list.bookmarks.each do |bookmark| %>
    <div class ="card d-flex inlin-block">
      <li class="list-group-item text-center h-100"><img class = "card-img-top" src=<%= bookmark.movie.poster_url%> alt="movietamerelapute">
      <div class="mt-4">
        <strong><%= bookmark.movie.title %></strong> -- "<%= bookmark.comment %>" <%= link_to "Delete movie", bookmark_path(bookmark),
                                                                                                                                                            method: :delete,
                                                                                                                                                            data: { confirm: "Are you sure?" }  %></li>
      </div>
    </div>
   <% end %>
</ul>

<br>
<br>
